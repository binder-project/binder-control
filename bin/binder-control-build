#!/usr/bin/env node
var program = require('commander')
var path = require('path')
var shell = require('shelljs')
var util = require('../lib/util.js')

program
  .version('0.0.1')

program
  .command('start')
  .description('Start the build server')
  .action(function () {
    console.log('Starting the build server...')
    util.startWithPM2({
      name: 'binder-build', 
      script: path.join(__dirname, 'apps', 'build.js'),
      args: process.argv.slice(2)
    })
  })

program
  .command('stop')
  .description('Stop the build server')
  .action(function () {
    console.log('Stopping the build server...')
    shell.exec('pm2 stop binder-build')
  })

program.parse(process.argv)






